@model RazorPage.Pages.Page5Model

@{
    ViewData["Title"] = "Page5";
}

<h1>Page5</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.Id" />
            <div class="form-group">
            <label asp-for="User.Civility" class="control-label">Civilité</label>
            <input asp-for="User.Civility" class="form-control" />
            <span asp-validation-for="User.Civility" class="text-danger"></span>
        </div>
            <div class="form-group">
                <label asp-for="User.Lastname" class="control-label">Nom</label>
                <input asp-for="User.Lastname" class="form-control" />
                <span asp-validation-for="User.Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Firstname" class="control-label">Prenom</label>
                <input asp-for="User.Firstname" class="form-control" />
                <span asp-validation-for="User.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label">Email</label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Telephone" class="control-label">Telephone</label>
                <input asp-for="User.Telephone" class="form-control" />
                <span asp-validation-for="User.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="User.ConfidentialityPoliticAccepted" required />
                    J'accepte la politique de confidentialité
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="User.MarketingOfferAccepted" />
                    J'accepte de recevoir les offres marketing
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
